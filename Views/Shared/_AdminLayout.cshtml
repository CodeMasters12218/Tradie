<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tradie</title>
    <script type="importmap"></script>

    <!-- Link to Google Fonts for Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Monomaniac+One&display=swap" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tradie.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="admin-header bg-white border-bottom shadow-sm py-1 px-4 d-flex justify-content-between align-items-center">
        <!-- Logo -->
        <div class="logo">
            <a class="navbar-brand fs-4 fw-bold text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                Tradie Admin
            </a>
        </div>

        <!-- Profile Container -->
        <div class="d-flex align-items-center gap-3">
            <!-- Profile Image -->
            <img src="@ViewData["AdminPhoto"]" alt="Admin Profile" class="rounded-circle" width="32" height="32" />

            <!-- Name and Email -->
            <div class="text-end">
                <div class="fw-semibold">@ViewData["AdminName"]</div>
                <div class="text-muted small">@ViewData["AdminEmail"]</div>
            </div>
        </div>
    </header>


    <header>
        @RenderSection("Header", required: false)
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- 
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Tradie - All Rights Reserved - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>  